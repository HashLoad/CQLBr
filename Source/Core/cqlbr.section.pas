unit cqlbr.section;

{$ifdef fpc}
  {$mode delphi}{$H+}
{$endif}

interface

uses
  SysUtils,
  Generics.Collections,
  cqlbr.interfaces;

type
  TCQLSection = class(TInterfacedObject, ICQLSection)
  strict private
    FName: string;
    function _GetName: string;
  public
    constructor Create(ASectionName: string);
    procedure Clear; virtual; abstract;
    function IsEmpty: Boolean; virtual; abstract;
    property Name: string read _GetName;
  end;

implementation

uses
  cqlbr.utils;

{ TCQLSection }

constructor TCQLSection.Create(ASectionName: string);
begin
  FName := ASectionName;
end;

function TCQLSection._GetName: string;
begin
  Result := FName;
end;

end.
